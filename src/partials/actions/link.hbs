<div class='link'>
  <a href='{{href}}' class='action__button' {{#if target}} target='{{target}}'
    {{/if}} {{#unless (false no-track)}} {{> attributes/no-track}} {{/unless}}>
    <span class='action__button__name'>{{name}}</span>
    <span class='action__button__icon'>
      <span class='icon-arrow'></span>
    </span>
  </a>
</div>
